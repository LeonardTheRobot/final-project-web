extends layout

block content
  .container.container-custom
    h2 Place Order
    .card
      .card-body.bg-light
        form#order-form(action='/api/orders')
          .form-group.row
            label.col-form-label.col-md-1(for='user-select') User
            .col-md-4
              select#user-select.form-control(name='user')
                option(disabled, selected) Choose a user
          .form-group.row
            label.col-form-label.col-md-1(for='zone-select') Zone
            .col-md-4
              select#zone-select.form-control(name='zone')
                option(disabled, selected) Choose a zone
          .form-group
            label Items
            fieldset.form-group
              .row
                label.col-form-label.col-md-1 A
                .col-md-2
                  input.form-control(name='A', type='number', min='0', max='5', value='0')
                label.col-form-label.col-md-1 B
                .col-md-2
                  input.form-control(type='number', min='0', max='5', value='0')
                label.col-form-label.col-md-1 C
                .col-md-2
                  input.form-control(type='number', min='0', max='5', value='0')
                label.col-form-label.col-md-1 D
                .col-md-2
                  input.form-control(type='number', min='0', max='5', value='0')
          button.btn.btn-primary(type='submit') Submit
  script(src='/javascripts/placeOrder.js')
