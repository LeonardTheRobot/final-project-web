extends layout

block content
  .container-fluid.container-custom
    h2 System Status
    form
      .checkbox
        label
          input#auto-update-checkbox(type='checkbox', value='', checked)
          |  Auto-update
    .row
      .col-auto
        .card
          .card-body
            h4.card-title Map
            #map-container
              img#map-image(src='/images/CS-LG-2.png')
              canvas#map-canvas(width='576', height='486')
      .col-auto
        .card
          .card-body
            h4.card-title Order Queue
            table.table.table-striped.table-bordered
              thead
                tr
                  th #
                  th ID
                  th User
                  th Zone
                  th Items
                  th Status
              tbody#order-queue-table-body
      .col-auto
        .card
          .card-body
            h4.card-title Robot Inventory
            table.table.table-striped.table-bordered
              thead
                th Item
                th Quantity
              tbody#inventory-table-body
  script(type='module', src='/javascripts/systemStatus.js')
